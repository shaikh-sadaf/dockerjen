pipeline{
    agent any
    stages{
        stage('git checkout')
        {
            steps{
              checkout([$class: 'GitSCM', branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/shaikh-sadaf/dockerjen.git']]])
            }
        }
        stage('parameter setup')
        {
            steps{
                script{
                   properties([
                       parameters([
                           string( 
                            defaultvalue: 'httpd',
                            name: 'package')
                             ])])
                               
                }
            }
        }
          stage('Build in docker container') {
          steps{
          
            agent {
                dockerfile {
                    additionalBuildArgs  '--build-arg version="$package"'
                }
            }
         }
         }
         stage('conditional'){
                         steps{
                               if (params.package = "httpd") ; then  
                               sh 'yum install -y ${package}'
                               }
                               else 
                               {
                                 echo ' "Please Mention Correct Package" && exit '
                              }
          }
         if (params.package) = "httpd" ; then  RUN yum install -y ${package}; else RUN echo "Please Mention Correct Package" && exit; fi
        stage('build docker image'){
            steps{
                script{
               
                    sh 'docker build -t my-apache2 .'
                }
            }
        }
       
    }
}
